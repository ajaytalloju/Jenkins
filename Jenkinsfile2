pipeline {
    agent {
        docker { image 'node:16-alpine' }
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-cred') // Jenkins credential ID
        IMAGE_NAME = 'ajaytalloju/myrepo:node-16-docker' // Specify your image name
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ajaytalloju/Jenkins.git'
            }
        }
        stage('Test Docker Access') {
            steps {
                sh 'docker --version' // Test if Docker command works
            }
        }
        stage('Build Custom Docker Image') {
            steps {
                sh 'ls -l' // List files to ensure Dockerfile is present
                script {
                    sh "docker build -t ${IMAGE_NAME} ." // Build the Docker image
                }
            }
        }
        stage('Push Custom Docker Image to Docker Hub') {
            steps {
                script {
                    sh "echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin"
                    sh "docker push ${IMAGE_NAME}" // Push the image to Docker Hub
                }
            }
        }
    }
}
