pipeline {
    agent {
        docker { image 'node:16-alpine' } // Use the Node.js image
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-cred') // Jenkins credential ID
        IMAGE_NAME = 'ajaytalloju/myrepo:node-16-docker' // Specify your image name
    }
    stages {
        stage('Checkout') {
            steps {
                // Clone the repository
                git 'https://github.com/ajaytalloju/Jenkins.git'
            }
        }
        stage('Build Custom Docker Image') {
            steps {
                // List files to ensure Dockerfile is present
                sh 'ls -l'
                
                // Build the Docker image using the Dockerfile
                script {
                    sh "docker build -t ${IMAGE_NAME} ." // Ensure the Dockerfile is in the root of the repo
                }
            }
        }
        stage('Push Custom Docker Image to Docker Hub') {
            steps {
                script {
                    // Login to Docker Hub
                    sh "echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin"
                    
                    // Push the image to Docker Hub
                    sh "docker push ${IMAGE_NAME}"
                }
            }
        }
        // You can add more stages here, such as tests or deployment
    }
}
